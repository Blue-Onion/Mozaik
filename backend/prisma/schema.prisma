generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// USERS
// --------------------------------------------------------

model User {
  id        String    @id @default(uuid())
  name      String?
  email     String    @unique
  password  String
  imageUrl  String?

  prompts   Prompt[]
  videos    Video[]
  projects  Project[]
  chatLogs  ChatHistory[]

  createdAt DateTime  @default(now())
}

// --------------------------------------------------------
// PROMPTS (user writes a prompt -> becomes a manim script)
// --------------------------------------------------------

model Prompt {
  id          String         @id @default(uuid())
  text        String          
  generatedCode String?       
  status      PromptStatus    @default(PENDING)

  user        User            @relation(fields: [userId], references: [id])
  userId      String
  project     Project?        @relation(fields: [projectId], references: [id])
  projectId   String?

  video       Video?
  chatLogs    ChatHistory[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// --------------------------------------------------------
// VIDEO FILE (output of prompt â†’ manim render)
// --------------------------------------------------------

model Video {
  id          String    @id @default(uuid())
  videoUrl    String     // S3 / Cloudflare / local storage link
  durationSec Int?
  resolution  String?    // e.g. 1080p, 720p

  prompt      Prompt     @relation(fields: [promptId], references: [id])
  promptId    String     @unique

  user        User       @relation(fields: [userId], references: [id])
  userId      String
  project     Project?   @relation(fields: [projectId], references: [id])
  projectId   String?

  createdAt   DateTime   @default(now())
}

// --------------------------------------------------------
// PROJECTS
// --------------------------------------------------------

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?

  user        User          @relation(fields: [userId], references: [id])
  userId      String

  prompts     Prompt[]
  videos      Video[]
  chatLogs    ChatHistory[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// --------------------------------------------------------
// CHAT HISTORY
// --------------------------------------------------------

model ChatHistory {
  id        String    @id @default(uuid())
  role      ChatRole  @default(USER)
  content   String

  user      User      @relation(fields: [userId], references: [id])
  userId    String
  project   Project?  @relation(fields: [projectId], references: [id])
  projectId String?
  prompt    Prompt?   @relation(fields: [promptId], references: [id])
  promptId  String?

  createdAt DateTime  @default(now())
}

// --------------------------------------------------------
// ENUMS
// --------------------------------------------------------

enum PromptStatus {
  PENDING
  GENERATING_CODE   // AI is creating manim code
  RENDERING_VIDEO   // manim is rendering
  COMPLETED
  FAILED
}

enum ChatRole {
  USER
  ASSISTANT
  SYSTEM
}
